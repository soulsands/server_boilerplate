{
  "name": "express-mongoose-es6-rest-api",
  "version": "1.0.0",
  "description": "A Boilerplate application for building REST APIs using express, mongoose in ES6 with code coverage1",
  "author": "soulsandz <407221377@qq.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=10.15.3",
    "npm": ">=6.2.0",
    "yarn": ">=1.16.0"
  },
  "scripts": {
    "dev": "nodemon index.js",
    "dev:debug": "cross-env DEBUG=express-mongoose-es6-rest-api:* npm run dev",
    "lint": "esw *.js server config --color",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test mocha server",
    "cover": "nyc npm run test",
    "cover:report": "nyc report --reporter=lcov",
    "cover:code": "nyc instrument . ./.nyc_code --exclude *nyc*  --delete",
    "cover:send": "nyc report --reporter=text-lcov | coveralls",
    "cmt": "git cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:soulsands/server_boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "express": "4.16.3",
    "express-jwt": "5.3.1",
    "express-validation": "1.0.2",
    "express-winston": "2.5.0",
    "helmet": "3.12.0",
    "http-status": "1.0.1",
    "joi": "10.6.0",
    "jsonwebtoken": "7.1.9",
    "method-override": "^2.3.10",
    "mongoose": "5.7.5",
    "morgan": "1.9.0",
    "supertest": "^4.0.2",
    "winston": "2.4.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.4",
    "cross-env": "5.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.1.0",
    "husky": "^3.0.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "validate-commit-msg": "^2.14.0"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
